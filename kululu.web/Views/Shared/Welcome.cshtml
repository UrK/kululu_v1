@using Resources = Kululu.Web.Views.Shared.Welcome

@model Kululu.Web.Models.PlaylistWithUserDTO
@{
    ViewBag.Title = "Welcome";
    Layout = MVC.Shared.Views._LayoutZero;
}
@section CSS {
    <link href="@Url.Content("~/Content/css/welcome_" + PageData["dirStr"] + ".css")" rel="stylesheet" type="text/css" />
}

@section ScriptsEND
{
    <script src="@Url.Content("~/Scripts/welcome.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ajax.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var hfAppPath = '@(Url.Content("~") == "/" ? "" : Url.Content("~"))';
    </script>

<canvas id="bg"></canvas>
<canvas id="topLights"></canvas>
@using (Html.BeginForm("Create", "Playlist", FormMethod.Post, new { id = "frmRegister" }))
{
    <div class="block welcome">
        <h1>@Resources.Heading</h1>
        <div class="clearfix">
            <a href="https://www.facebook.com/@Model.Playlist.FanPageId" class="page" target="_blank">
                <img class="pageImg" src="https://graph.facebook.com/@Model.Playlist.FanPageId/picture"/>
                <span class="name">@Model.Playlist.Name</span>
            </a>
        </div>
        <ul>
            <li>@Resources.Feature1</li>
            <li>@Resources.Feature2</li>
            <li>@Resources.Feature3</li>
            <li>@Resources.Feature4</li>
            <li>@Resources.Feature5</li>
        </ul>
        <a class="ui-btnSubmit green btnCreate" href="javascript:void(0);">@Resources.CallToAction</a>
        <p>@Resources.CallToActionMotivation</p>
    </div>

    <div class="block loading">
        <h1 class="loading">@Resources.LoadingMessage1</h1>
        <h1>@Resources.LoadingMessage2</h1>
        <div>
            <img class="loader" src="../../Content/img/ajax-loader3.gif" />
        </div>
    </div>
    
     @Html.HiddenFor(model => model.Playlist.FanPageId)
     @Html.ValidationSummary(true)
     @Html.HiddenFor(model => model.Playlist.Id)
     @Html.HiddenFor(model => model.Playlist.LocalBusinessId)
     @Html.HiddenFor(model => model.Playlist.FanPageId)
     @Html.HiddenFor(model => model.Playlist.IsDefaultPlaylist)
     @Html.HiddenFor(model => model.Playlist.Name)
     @Html.HiddenFor(model => model.Playlist.Description)
     @Html.HiddenFor(model => model.Playlist.NextPlayDate, DateTime.Now.AddDays(1))
     @Html.HiddenFor(model => model.Playlist.NumOfSongsLimit, 10)
     @Html.HiddenFor(model => model.Playlist.IsSongsLimitDaily)
     Html.HiddenFor(model => model.Playlist.IsActive, true);
}

    

     
